@model IEnumerable<FYPInitial.Models.servicehistory>

@{
    ViewBag.Title = "Index";
}

<br />
<br />

<h2>Index</h2>

<br />

@using (Html.BeginForm())
{
    <p>
        Find by Eircode or Address: @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>

}


@if (Model != null)
{
    if (Model.Count() != 0)
    {

        <table class="table">
            <tr>
              
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Eircode)
                </th>
               
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                   
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Eircode)
                    </td>
                   
                    <td>
                        @Html.ActionLink("Details", "Details", new { apptId = item.AppointmentID })
                    </td>
                </tr>
            }

        </table>

    }

    
}


        

